<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/textViewConfigTitleTab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="Telemetry config"
        android:elegantTextHeight="true"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connected/Disconnected event"
        android:id="@+id/textAllowTelemetryEvent1"
        android:layout_below="@+id/textViewConfigTitleTab2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />

    <CheckBox
        android:id="@+id/checkBoxAllowTelemetryEvent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textAllowTelemetryEvent1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="94dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acquisition satellite event"
        android:id="@+id/textAllowTelemetryEvent7"
        android:layout_below="@+id/textAllowTelemetryEvent1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />
    <CheckBox
        android:id="@+id/checkBoxAllowTelemetryEvent7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textAllowTelemetryEvent7"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="94dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance event"
        android:id="@+id/textAllowTelemetryEvent8"
        android:layout_below="@+id/textAllowTelemetryEvent7"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />
    <CheckBox
        android:id="@+id/checkBoxAllowTelemetryEvent8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textAllowTelemetryEvent8"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="94dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not connected event"
        android:id="@+id/textAllowTelemetryEvent9"
        android:layout_below="@+id/textAllowTelemetryEvent8"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />
    <CheckBox
        android:id="@+id/checkBoxAllowTelemetryEvent9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textAllowTelemetryEvent9"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="94dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telemetry_voice"
        android:id="@+id/txtViewTelemetryVoice"
        android:layout_below="@+id/textAllowTelemetryEvent9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"/>

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTelemetryVoice"
        android:layout_width="175dp"
        android:layout_alignBaseline="@+id/txtViewTelemetryVoice"
        android:layout_alignParentRight="true"
        android:focusableInTouchMode="false" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewTelemetryVoice"
        android:text="@string/test_telemetry_voice"
        android:id="@+id/butTestVoice"
        android:layout_marginTop="18dp"
        android:layout_alignParentStart="true" />
</RelativeLayout>
